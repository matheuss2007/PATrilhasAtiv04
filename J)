using System;

namespace atv3
{
	class Program
	{
		public static void Main(string[] args)
		{
			
			 
			 
			 Console.WriteLine("um numero inteiro:");
			 int numero = int.Parse (Console.ReadLine().ToLower());
			 
			 
			  
			  
			  
			  

			    if ( numero > 10 || numero < 0)
        {
			    	
           
		Console.WriteLine(" seu numero e valido");
		
			    	
        }
			    
			    
        else
        	
        {
        	
          
        	Console.WriteLine(" seu numero e invalido ");
        }
        
        Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
           	
		}
	}
}
